{% extends 'base.html.twig' %}

{% block body %}
    {% include 'partials/navBar.html.twig' %}
    <div class="container">
        <div class="card mx-auto text-center bg-dark mt-5 mb-5" style="padding: 30px;">
            <div class="card-header mx-auto bg-dark">
                <span> <img src="{{ asset('img/logo.png') }}" class="w-75" alt="Logo"> </span><br/>
                <span class="logo_title mt-5"> Demande de compte </span>
            </div>
            <div class="">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-6">
                        <label for="register-form-name">Pseudo :</label>
                        {{ form_errors(form.pseudo) }}
                        {{ form_widget(form.pseudo) }}
                    </div>
                    <div class="col-6">
                        <label for="register-form-name">Mail :</label>
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <label for="register-form-password">Mot de passe :</label>
                        {{ form_errors(form.pwd) }}
                        {{ form_widget(form.pwd) }}
                    </div>
                    <div class="col-6">
                        <label for="register-form-repassword">Confirmation mot de passe :</label>
                        {{ form_errors(form.confPwd) }}
                        {{ form_widget(form.confPwd) }}
                    </div>
                </div>

                <div class="col_full nobottommargin mt-3">
                    <button class="button button-3d button-black nomargin" id="register-form-submit" name="register-form-submit" value="register">Envoyer la demande</button>
                    <h6 class="mt-2">Le compte devra etre valider pas un admin.</h6>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}