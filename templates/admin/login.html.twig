{% extends 'base.html.twig' %}

{% block body %}
    {% include 'partials/navBar.html.twig' %}
    <div class="container">
        <div class="card card-login mx-auto text-center bg-dark mt-5 mb-5">
            <div class="card-header mx-auto bg-dark">
                <span> <img src="{{ asset('img/logo.png') }}" class="w-75" alt="Logo"> </span><br/>
                <span class="logo_title mt-5"> Administration Site </span>
            </div>
            <div class="card-body">
                <form action="{{ path('login') }}" method="post" id="login-form" name="login-form">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" name="_pseudo" id="login-form-pseudo" class="form-control" placeholder="Username">
                    </div>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" name="_password" class="form-control" id="login-form-password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <a href=""><button class="btn btn-outline-warning mr-2">Mot de passe perdu ?</button></a>
                        <input type="submit" name="login-form-submit" id="login-form-submit" value="Connexion" class="ml-2 btn btn-outline-danger login_btn">
                    </div>
                    <div class="form-group">
                        <a href=""><button class="btn btn-outline-light">Demande de compte</button></a>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
