{% extends 'base.html.twig' %}

{% block body %}
    {% include 'partials/navBar.html.twig' %}
    <div class="container">
        <div class="card card-login mx-auto text-center bg-dark mt-5 mb-5">
            <div class="card-header mx-auto bg-dark">
                <span> <img src="{{ asset('img/logo.png') }}" class="w-75" alt="Logo"> </span><br/>
                <span class="logo_title mt-5"> Administration Site </span>
            </div>
            <div class="card-body">
                <form action="{{ path('login') }}" method="post">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" name="_username" id="inputEmail" class="form-control" required autofocus>
                    </div>

                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" name="_password" id="inputPassword" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <a href="" class="btn btn-outline-warning mr-2">Mot de passe perdu ?</a>
                        <button type="submit" name="login-form-submit" id="login-form-submit" class="ml-2 btn btn-outline-danger login_btn">Connexion</button>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-outline-light" href="{{ path('register') }}">Demande de compte</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
