{% extends 'base.html.twig' %}

{% block body %}
    {% include 'partials/navBar.html.twig' %}
    <div class="container">

        <!-- Page Heading -->
        <h1 class="mt-4 mb-3">Détail de mise à jour{% if is_granted('ROLE_ADMIN') %}<a href="{{ path('del_blog', {'slug': post.slug}) }}" class="float-right"><button class="btn btn-danger">Supprimer</button></a>{% endif %}</h1>

        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('homepage') }}">Acceuil</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('dev_blog') }}">DevBlog</a>
            </li>
            <li class="breadcrumb-item active">{{ post.slug }}</li>
        </ol>

        <!-- Update Row -->
        <div class="row">

            <div class="col-md-6">
                <img class="img-fluid" src="{{ post.img }}" alt="">
            </div>

            <div class="col-md-6">
                <h3 class="my-3">{{ post.title }}</h3>
                <p>{{ post.description }}</p>
                <h3 class="my-3">Update Details</h3>
                <p>{{ post.detail|raw }}</p>
            </div>
        </div>
        <!-- /row -->
        <hr>
    </div>

{% endblock %}

