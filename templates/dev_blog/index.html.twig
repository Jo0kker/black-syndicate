{% extends 'base.html.twig' %}


{% block body %}
    {% include 'partials/navBar.html.twig' %}
    <div class="container">
        <!-- Page Heading -->
        <h1 class="mt-4 mb-3">DevBlog{% if is_granted('ROLE_ADMIN') %}<a href="{{ path('add_blog') }}" class="float-right"><button class="btn btn-info">Ajout article</button></a>{% endif %}</h1>


        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('homepage') }}">Acceuil</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('dev_blog') }}">DevBlog</a>
            </li>
        </ol>

        <div class="row">
            {% for post in devblog %}
            <!-- Update Template -->
            <div class="col-lg-4 col-sm-6 update-item">
              <div class="card h-100 postDev">
                <a href="{{ path('show_blog', {'slug': post.slug}) }}"><img class="card-img-top img-index" src="{{ post.img }}" alt=""></a>
                <div class="card-body">
                  <h4 class="card-title">
                    <a href="{{ path('show_blog', {'slug': post.slug}) }}">{{ post.title }}</a>
                  </h4>
                  <p class="card-text">{{ post.description }}</p>
                </div>
              </div>
            </div>
            {% endfor %}
        </div>
        <!-- /row -->
    </div>
{% endblock %}
